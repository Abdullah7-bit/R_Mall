@model IEnumerable<R_Mall.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_theme.cshtml";
}

<h2>Food Court</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Food_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Food_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Food_Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Menu_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Menu_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Menu_Id })
        </td>
    </tr>
}

</table>
